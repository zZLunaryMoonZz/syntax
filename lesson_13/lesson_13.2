import time


def timer(func):
    def wrapper(*args, **kwargs):
        start = time.time()
        func(*args, **kwargs)
        end = time.time()
        print(f'Execution {round(end-start, 2)} seconds')

    return wrapper


@timer
def create_design(iters, pause):
    time.sleep(pause)
    print(iters)


