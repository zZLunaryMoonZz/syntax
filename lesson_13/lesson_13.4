def validate_input(func):
    def wrapper(*args, **kwargs):
        if len(args) != 2 and len(kwargs) != 0:  # Проверка количества аргументов
            raise ValueError("Колличество задач")

        if not isinstance(args[0], str):  # Проверка типа первого аргумента
            raise TypeError("Название проекта должно быть строкой")

        if not isinstance(args[1], int):  # Проверка типа второго аргумента
            raise TypeError("Второй аргумент не число!")

        return func(args)

    return wrapper


@validate_input
def estimate_time(args):
    result = "Estimated time calculated successfully"
    return result


